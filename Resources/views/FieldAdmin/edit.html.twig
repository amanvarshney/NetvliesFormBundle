{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            $('form').attr('novalidate', 'novalidate');
            $('.field_type').change(function() {
                // select type
                if (this.value == 'select') {
                    $('.field_select_type').parent().parent().show();
                } else {
                    $('.field_select_type').parent().parent().hide();
                }
                // multiple select
                if (this.value == 'select') {
                    $('.field_select_multiple').parent().parent().show();
                } else {
                    $('.field_select_multiple').parent().parent().hide();
                }
                // default
                if (this.value != 'checkbox') {
                    $('.field_default').parent().parent().show();
                } else {
                    $('.field_default').parent().parent().hide();
                }
                // options
                if (this.value == 'select') {
                    $('.sonata-ba-field-inline-table').parent().show();
                } else {
                    $('.sonata-ba-field-inline-table').parent().hide();
                }
            }).change();
        })
    </script>

{% endblock %}
